%header.site-header
  = link_to root_path, class: 'brand-logo' do
    = image_tag "kazimir_logo.png", alt: "KAZIMIR"

  %nav.navigation
    - if params[:locale] == 'en'
      = link_to "INFO", '/en'
      = link_to "TEAM", '/en/team'
      = link_to "PRESS", '/en/press'
      = link_to "PL", '/pl'
    - else
      = link_to "INFO", '/'
      = link_to "ZESPÓŁ", '/pl/team'
      = link_to "PRESS", '/pl/press'
      = link_to "EN", '/en'
